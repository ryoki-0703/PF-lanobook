<div class="container">

  <h2>新着</h2>
  <div class="row">
    <div class="sliderArea">
    <div class="full-screen slider">
      <% @lanobes.each do |lanobe| %>
        <div class="screen-size">
          <%= link_to lanobe_path(lanobe.id) do %>
            <%= attachment_image_tag lanobe, :image, fallback: "no-image2.jpg" %>
          <% end %>
          <p><%= lanobe.title %></p>
          <p><%= lanobe.user.name %></p>
        </div>
      <% end %>
    </div>
    </div>
  </div>

  <p>ランキング(いいね)</p>
  <div class="row">

    <% @favorite_ranks.each do |lanobe| %>
      <div style="float:left;">
        <%= link_to lanobe_path(lanobe.id) do %>
          <%= attachment_image_tag lanobe, :image, size: "200x200", fallback: "no-image2.jpg" %>
        <% end %>
        <p>タイトル：<%= lanobe.title %></p>
        <p>ユーザーネーム：<%= lanobe.user.name %></p>
        <a>♥<%= lanobe.favorites.count %></a>
      </div>
    <% end %>
  </div>

  <p>ランキング(コメント)</p>
  <div class="row">
    <% @comment_ranks.each do |lanobe| %>
      <div style="float:left;">
        <%= link_to lanobe_path(lanobe.id) do %>
          <%= attachment_image_tag lanobe, :image, size: "200x200", fallback: "no-image2.jpg" %>
        <% end %>
        <p>タイトル：<%= lanobe.title %></p>
        <p>ユーザーネーム：<%= lanobe.user.name %></p>
        <a><%= lanobe.post_comments.count %></a>
      </div>
    <% end %>
  </div>

</div>

