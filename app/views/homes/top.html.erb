<div class="container">
  <h1>トップページ</h1>

    <p>新着</p>
  <div class="row">

    <div class="sliderArea">
    <div class="slider sliderWide">
      <% @lanobes.each do |lanobe| %>
        <div>
          <%= link_to lanobe_path(lanobe.id) do %>
            <%= attachment_image_tag lanobe, :image, size: "200x200" %>
          <% end %>
          <p>タイトル：<%= lanobe.title %></p>
          <p>ユーザーネーム：<%= lanobe.user.name %></p>
        </div>
      <% end %>
    </div>
    </div>
  </div>

  <div class="row">
    <p>ランキング(いいね)</p>
    <% @favorite_ranks.each do |lanobe| %>
      <div style="float:left;">
        <%= link_to lanobe_path(lanobe.id) do %>
          <%= attachment_image_tag lanobe, :image, size: "200x200" %>
        <% end %>
        <p>タイトル：<%= lanobe.title %></p>
        <p>ユーザーネーム：<%= lanobe.user.name %></p>
        <a>♥<%= lanobe.favorites.count %></a>
      </div>
    <% end %>
  </div>

  <div class="row">
    <p>ランキング(コメント)</p>
    <% @comment_ranks.each do |lanobe| %>
      <div style="float:left;">
        <%= link_to lanobe_path(lanobe.id) do %>
          <%= attachment_image_tag lanobe, :image, size: "200x200" %>
        <% end %>
        <p>タイトル：<%= lanobe.title %></p>
        <p>ユーザーネーム：<%= lanobe.user.name %></p>
        <a><%= lanobe.post_comments.count %></a>
      </div>
    <% end %>
  </div>

</div>