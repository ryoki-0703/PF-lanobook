<div class="container">
  <div class="row p-4">
    <% if params[:category_id].nil? %>
      <h2>投稿一覧</h2>
    <% else %>
      <h2><%= @categroy.name %></h2>
    <% end %>
  </div>

  <div class="row mb-5">
    <% @lanobes.each do |lanobe| %>
      <div class="col-md-6 border p-4">
        <div class="row">
          <div class="col-md-4">
            <div class="lanobe-gazou d-inline-block">
              <%= link_to lanobe_path(lanobe.id) do %>
                <%= attachment_image_tag lanobe, :image, :fill, 170, 220, fallback: "no-image2.jpg", size: '170x220' %>
              <% end %>
            </div>
          </div>
          <div class="col-md-8">
            <div class="d-inline-block pl-5">
              <h5><%= lanobe.title %></h5>
              <%= link_to user_path(lanobe.user.id) do %>
                <p class="d-inline-block pt-4"><%= attachment_image_tag lanobe.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50', class: "rounded-circle" %></p>
                <p class="d-inline-block pl-2"><%= lanobe.user.name %></p>
              <% end %>
              <br><p class="d-inline-block pl-5"><i class="far fa-thumbs-up fa-lg pr-1"></i><%= lanobe.favorites.count %></p>
              <p class="d-inline-block pl-3 pb-3"><i class="far fa-comment fa-lg pr-1"></i><%= lanobe.post_comments.count %></p>
              <p><%= lanobe.category.name %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>
<%= paginate @lanobes %>