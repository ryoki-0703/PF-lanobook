<div class="container">
  <div class="row">

    <div class="col-md-6 mt-3">
      <%= attachment_image_tag @user, :profile_image, :fill, 350, 350, format: 'jpeg', fallback: "no-image.jpg", size: '350x350', class: "rounded-circle mt-5" %>
      <br><div class="d-inline-block ml-5 mr-4">　</div>
      <h3 class="d-inline-block ml-5 mt-4"><%= @user.name %></h3>
      <br><div id="follow_form" class="d-inline-block mt-3 ml-5">
            <%= render "follow_info", user: @user %>
          </div>
      <% if @user.id == current_user.id %>
        <br><h5 class="d-inline-block ml-5 mt-3"><i class="far fa-thumbs-up mr-1"></i><%= link_to "いいね一覧", favorites_users_path %></h5>
        <br><p class="mt-3 ml-5"><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
    </div>

    <div class="col-md-6 mt-4">
      <h2 class="d-inline-block mb-4">投稿</h2>
      <h2 class="d-inline-block ml-4"><%= @lanobes.count %></h2> 件
      <div class="row">
        <% @lanobes.each do |lanobe| %>
          <div class= "col-md-6">
            <%= link_to lanobe_path(lanobe.id) do %>
              <%= attachment_image_tag lanobe, :image, :fill, 220, 270, fallback: "no-image2.jpg", size: '220x270' %>
            <% end %>
            <p class="ml-2"><%= lanobe.title %></p>
            <p class="ml-2"><%= lanobe.category.name %></p>
            <p class="d-inline-block ml-2"><i class="far fa-thumbs-up pr-1"></i><%= lanobe.favorites.count %></p>
            <p class="d-inline-block ml-4 mb-5"><i class="far fa-comment pr-1"></i><%= lanobe.post_comments.count %></p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
