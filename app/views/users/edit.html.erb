<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="text-center">
  <h2 class="mb-4 mt-3 mr-3">プロフィール編集</h2>
  <%= form_with model:@user, local:true do |f| %>
    <%= attachment_image_tag @user, :profile_image, :fill, 400, 400, fallback: "no-image.jpg", size: '400x400', class: "rounded-circle" %>
    <br><%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "d-inline-block ml-5 mt-2" %>
    <br><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", size: "43%", class: "mt-3" %>
    <br><%= f.submit "変更を保存", class: "btn btn-success w-25 mt-3"%>
  <% end %>
</div>