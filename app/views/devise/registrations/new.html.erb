<div class="sin-up">
  <div class="text-center">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'form-signin', local: true do |f| %>
    　<%= render "devise/shared/error_messages", resource: resource %>
        <h1 class="h3 mb-3 font-weight-normal">新規登録</h1>
        <%= f.label :name, class: "sr-only" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name" %>

        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>

        <%= f.label :password, class: "sr-only" %>
          <% if @minimum_password_length %>
            <% pass_placeholder = "Password " + @minimum_password_length.to_s + "文字以上" %>
          <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: pass_placeholder %>

        <%= f.label :password_confirmation, class: "sr-only" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "同じパスワードを入力してください" %>

        <div class="mt-3 mb-4">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
  </div>
</div>









