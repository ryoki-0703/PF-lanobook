<div class="container">
  <% if @model == "user" %>
  <h3 class="text-center pt-3 pb-4">検索結果 ：<%= @value %></h3>
    <% @datas.each do |user| %>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-2 border-bottom border-top p-2">
        <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size:'80x80', class: "rounded-circle" %>
        <% end %>
      </div>
      <div class="col-md-4 border-bottom border-top p-2">
        <%= link_to user_path(user.id) do %>
          <h4 class="pt-4"><%= user.name %></h4>
        <% end %>
      </div>
    </div>
    <% end %>
  <% elsif @model == "lanobe" %>
  <h3 class="text-center pt-3 pb-4">検索結果 ：<%= @value %></h3>
    <div class="row">
      <% @datas.each do |lanobe| %>
        <div class="col-md-6 border p-4">
          <div class="row">
            <div class="col-md-4">
              <div class="lanobe-gazou d-inline-block">
                <%= link_to lanobe_path(lanobe.id) do %>
                  <%= attachment_image_tag lanobe, :image, :fill, 170, 220, fallback: "no_image.jpg", size:'170x220' %>
                <% end %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="d-inline-block pl-5">
                <h5><%= lanobe.title %></h5>
                <%= link_to user_path(lanobe.user.id) do %>
                  <p class="d-inline-block pt-4"><%= attachment_image_tag lanobe.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50', class: "rounded-circle" %></p>
                  <p class="d-inline-block pl-2"><%= lanobe.user.name %></p>
                <% end %>
                <br><p class="d-inline-block pl-5"><i class="far fa-thumbs-up fa-lg pr-1"></i><%= lanobe.favorites.count %></p>
                <p class="d-inline-block pl-3 pb-3"><i class="far fa-comment fa-lg pr-1"></i><%= lanobe.post_comments.count %></p>
                <p><%= lanobe.category.name %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <% end %>
</div>